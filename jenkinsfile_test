pipeline {
  agent any
  environment {
    DOCKER_REGISTRY = "https://docker.io/cudex/manage_web"
    DOCKER_REPO_NAME = "cudex/manage_web"
  }
  stages {
     stage("Create BUILD_DATE") {
      steps {
        script {
          def date = new Date()
          def formattedDate = date.format("yyyyMMdd")
          env.BUILD_DATE = formattedDate

          test_version = "${env.DOCKER_REPO_NAME}:1.${env.BUILD_NUMBER}-${env.BUILD_DATE}"
        }
      }
    }
    stage("Clone the Repository") {
      steps {
        sh "echo ${test_version}"
      }
    }
  }
}