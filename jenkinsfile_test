pipeline {
  agent any
  environment {
    DOCKER_REGISTRY = "https://docker.io/cudex/manage_web"
    DOCKER_REPO_NAME = "cudex/manage_web"
  }
  stages {
    // stage('Checkout') {
    //   steps {
    //             git branch: 'main', credentialsId: 'test', url: "https://github.com/CUdex/manage_web.git"
    //         }
    // }
    stage("Create BUILD_DATE") {
      steps {
        script {
          def date = new Date()
          def formattedDate = date.format("yyyyMMdd")
          env.BUILD_DATE = formattedDate

          test_version = "${DOCKER_REPO_NAME}:1.${env.BUILD_NUMBER}-${env.BUILD_DATE}"
        }
      }
    }
    stage("first ls check") {
      steps {
        sh 'ls -al'
      }
    }
    stage('Trigger Job B') {
      steps {
        build job: 'test_echo', parameters: [string(name: 'WEB_VERSION', value: "${test_version}")]
      }
    }
  }
}