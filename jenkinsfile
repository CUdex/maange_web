pipeline {
  agent any
  environment {
    DOCKER_REGISTRY = "https://docker.io/cudex/manage_web"
    DOCKER_REPO_NAME = "cudex/manage_web"
  }
  stages {
    stage('Checkout') {
        steps {
            scmSkip(deleteBuild: true, skipPattern:'.*\\[ci skip\\].*')
        }
    }
     stage("Create BUILD_DATE") {
      steps {
        script {
          def date = new Date()
          def formattedDate = date.format("yyyyMMdd")
          env.BUILD_DATE = formattedDate

          app_version = "${env.DOCKER_REPO_NAME}:1.${env.BUILD_NUMBER}-${env.BUILD_DATE}"
        }
      }
    }
    stage("Clone the Repository") {
      steps {
        git branch: 'main', url: 'https://github.com/CUdex/manage_web.git'
      }
    }
    stage("Build Docker Image") {
      steps {
        script {
          def dockerImage = docker.build("${app_version}")
        }
      }
    }
    stage("Push Docker Image to Docker Hub") {
      steps {
        script {
          docker.withRegistry("", "docker_credential") {
            def dockerImage = docker.image("${app_version}")
            dockerImage.push()
          }
        }
      }
    }
    stage('Delete Docker image') {
      steps {
        sh "docker rmi -f ${app_version}"
      }
    }
    stage("Clone the manifest Repository") {
      steps {
        git branch: 'main', credentialsId: 'test', url: 'https://github.com/CUdex/vmmanager.git'
      }
    }
    stage('change container version in manifest file') {
      steps {
        script {
            // 파일 내용 변경하기
            def filePath = './web.yaml'
            def fileContent = sh(script: "cat ${filePath}", returnStdout: true).trim()
            def newContent = fileContent.replaceAll(/image: cudex\/manage_web:.*/, "image: ${app_version}")
            sh "echo '${newContent}' > ${filePath}"
        }
      }
    }
    stage('push github repository') {
     steps {
                withCredentials([gitUsernamePassword(credentialsId: 'test', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
                sh "git add ."
                sh "git commit -m 'update version ${app_version}'"
                sh "git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/CUdex/vmmanager.git"
            }
     }
    }
  }
}